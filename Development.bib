publisher = {Elsevier},
title = {{Genetic Regulation of the 2D to 3D Growth Transition in the Moss Physcomitrella patens.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/29395927 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5807088},
