issn = {00278424},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Arabidopsis,Casparian strips,Cell polarity,Endodermis,Root development},
month = {mar},
number = {11},
pages = {5214--5219},
title = {{A developmental framework for endodermal differentiation and polarity}},
volume = {107},
year = {2010}
}
