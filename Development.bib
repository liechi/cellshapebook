file = {:Users/behlab-liechi/Library/Application Support/Mendeley Desktop/Downloaded/Cao et al. - 2019 - TMK1-mediated auxin signalling regulates differential growth of the apical hook.pdf:pdf},
issn = {0028-0836},
journal = {Nature},
keywords = {Auxin,Plant development,Plant signalling},
month = {apr},
