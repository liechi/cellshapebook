journal = {bioRxiv},
pages = {630798},
publisher = {Cold Spring Harbor Laboratory},
title = {{Auxin-Induced Actin Cytoskeleton Rearrangements Require AUX1}},
url = {https://www.biorxiv.org/content/10.1101/630798v1},
year = {2019}
}
